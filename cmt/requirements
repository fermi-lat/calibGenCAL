package calibGenCAL
version v3r0p2

private 

branches src xml output doc

use GlastPolicy v*
use reconRootData v*
use digiRootData v*
use mcRootData v*
use RootPolicy v*
use xml v*
use Event v*

#because the latter package unfortunately exposes RootcintPolicy, the following macros have to be defined
# to protect windows builds. this really needs fixing!
macro rootcint_begin "" vsnet "<!--"
macro rootcint_end   "" vsnet "-->"

# make sure we have all graphical root libraries linked (stolen from rootanalysis)
# used for line fitting in muonCalib
macro_append ROOT_libs " -lHist -lGraf -lGpad " \
             WIN32 " ${ROOT_PATH}/lib/libHist.lib ${ROOT_PATH}/lib/libGraf.lib ${ROOT_PATH}/lib/libGpad.lib "

library RootFileAnalysis -no_share RootFileAnalysis.cxx
library CalDefs -no_share CalDefs.cxx
library CGCUtil -no_share CGCUtil.cxx

macro RootFileAnalysis_lib "" WIN32 "$(calibGenCALDir)/RootFIleAnalysis.lib"
macro CalDefs_lib "" WIN32 "$(calibGenCALDir)/CalDefs.lib"
macro CGCUtil_lib "" WIN32 "$(calibGenCALDir)/CGCUtil.lib"

macro all_static_libs "$(CalDefs_lib) $(CGCUtil_lib) $(RootFileAnalysis_lib)"

application compare_constants compare_constants.cxx
application genNtuple genNtuple.cxx


application runMuonCalib runMuonCalib.cxx muonCalib.cxx mcCfg.cxx $(all_static_libs)

application ciFit ciFit.cxx cfCfg.cxx $(all_static_libs)


